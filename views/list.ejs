<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">


    <%  newListItems.forEach((sri)=>{   %>
        <div class="item">
          <form action="/delete" method="post"> <input type="checkbox" name="checked" value="<%=sri._id%>" onchange="this.form.submit()"  >
            <input type="hidden" name="listname" value="<%= listTitle %> " id=""></input>
          </form>
           <p><%=sri.name  %></p>
         </div>
         <% }) %>



      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item"   autocomplete="off">
   
        <button type="submit" name="list" value="<%= listTitle%>">+</button>
      </form>
  </div>

<%- include("footer") -%>
